
<p id="notice"><%= notice %></p>
<% if @order.user == current_user %>
  <div class= "panel panel-default">
    <div class= "panel-heading">
      <h2>Order #<%= @order.id %></h2>
    </div>
  
  <table class="table">
    <thead>
      <tr>
        <th>Status</th>
        <th>Quantity</th>
        <th>Content</th>
        <th>Time</th>
        <th>Type</th>
        <th>Tracking</th>
      </tr>
    </thead>
  
    <tbody>
      <tr>
        <td><%= @order.status %></td>
        <td><%= @order.quantity %></td>
        <td><%= @order.content %></td>
        <td><%= @order.time.in_time_zone('Eastern Time (US & Canada)') %></td>
        <td><%= @order.ordertype %></td>
        <td><%= link_to 'Track this order', livetrack_path, target: :_blank %></td>
      </tr>
    </tbody>
  </table>
    
    <div class="panel-footer">
      <%= link_to 'Edit', edit_order_path(@order) %> |
      <%= link_to 'Back', orders_path %>
    </div>
  </div>
<%end%>

<div class="jumbotron center">
  <h1>Bikky!</h1>
</div>
